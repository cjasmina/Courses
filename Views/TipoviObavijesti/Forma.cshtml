@model TipObavijesti

@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Dodavanje tipa obavijesti";
    }
    else
    {
        ViewData["Title"] = "Izmjena tipa obavijesti";
    }

    ViewData["AktivniLink"] = NavigacijskiLinkovi.TipoviObavijesti;
}

<div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
    <div>
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<form asp-controller="TipoviObavijesti" asp-action="Snimi" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Spremi</button>
</form>