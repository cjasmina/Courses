@model Drzava

@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = Resource.DodavanjeDrzave;
    }
    else
    {
        ViewData["Title"] = Resource.IzmjenaDrzave;
    }
    
    ViewData["AktivniLink"] = NavigacijskiLinkovi.Drzave;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-highlighted">
        @Html.ValidationSummary()
    </div>
}

<div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
    <div>
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<form asp-controller="Drzave" asp-action="Snimi">
    <input asp-for="Id" type="hidden"/>

    <div class="form-group">
        <label asp-for="Naziv">@Resource.Naziv</label>
        <input asp-for="Naziv" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">@Resource.Spremi</button>
</form>